.page__hd {
  padding: 30rpx 35rpx;
  height: 120px;
  text-align: center;
  background-color: #408FF7;
  box-shadow: 0 10rpx 35rpx #dee1e8;
  position: relative;
}

.page__title {
  position: absolute;
  font-size: 36px;
  color: #fff;
  float:left;
  bottom: 50px;
}

.page__desc {
  position: absolute;
  font-size: 16px;
  color: #f8f8f8;
  float:left;
  bottom: 30px;
}

.weui-media-box__thumb {
  height: 35px;
  width: 35px;
}

.button-sp-area {
  padding: 30rpx 35rpx;
}

button[type="primary"][plain] {
  color: #fff;
  border: 1px solid #00BFFF;
  background-image: linear-gradient(-45deg, #16d9e3 0%, #46aef7 100%);
}

.button-hover[type="primary"][plain] {
  color: #fff;
  border-color: #96deda;
  opacity: 0.6;
}

button[type="default"][plain] {
  color: #fff;
  border: 1px solid #fbc2eb;
  background-image: linear-gradient(-45deg, #fbc2eb 0%, #a6c1ee 100%);
}

.button-hover[type="default"][plain] {
  color: #fff;
  border-color: #fbc2eb;
  opacity: 0.6;
}

.weui-panel {
  margin-top: 30rpx;
}

.weui-panel__hd {
  padding: 0px 15px 10px;
}

.weui-panel:after, .weui-panel:before {
  content: none;
}

.weui-media-box__hd_in-appmsg {
  color: #fff;
  background-image: linear-gradient(-45deg, #16d9e3 0%, #46aef7 100%);
  width: 40px;
  height: 40px;
  line-height: 40px;
}

.zan-capsule {
  display: inline-block;
  font-size: 12px;
  vertical-align: middle;
  line-height: 19px;
}

.zan-capsule__left, .zan-capsule__right {
  display: inline-block;
  line-height: 17px;
  height: 19px;
  vertical-align: middle;
  box-sizing: border-box;
}

.zan-capsule__left {
  padding: 0 2px;
  color: #fff;
  background: #999;
  border-radius: 2px 0 0 2px;
  border: 1rpx solid #999;
}

.zan-capsule__right {
  padding: 0 5px;
  width: 50px;
  text-align: center;
  color: #999;
  border-radius: 0 2px 2px 0;
  border: 1rpx solid #999;
}

.weui-media-box__desc {
  width: 200px;
  -webkit-line-clamp: 1;
}
